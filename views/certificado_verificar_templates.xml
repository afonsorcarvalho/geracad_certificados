<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Página exibida quando o certificado é válido (rota /certificados/verificar/<token>). HTML completo para auth=public. Responsiva com Bootstrap 5. -->
    <template id="certificado_verificar_page">
      <html>
        <head>
          <meta charset="utf-8"/>
          <meta name="viewport" content="width=device-width, initial-scale=1"/>
          <title>Verificação de Certificado</title>
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"/>
          <style>
            /* Tipografia responsiva: fontes se adaptam ao tamanho da tela */
            html { font-size: clamp(15px, 2vw + 14px, 16px); }
            .card-header { font-size: clamp(1rem, 3vw + 0.9rem, 1.25rem); }
            .card-header svg { width: clamp(24px, 5vw + 20px, 28px); height: clamp(24px, 5vw + 20px, 28px); }
            .cert-value-uppercase { text-transform: uppercase; }
            .cert-value-monospace { font-family: monospace; font-size: clamp(0.75rem, 1.5vw + 0.7rem, 0.85rem); word-break: break-all; }
            .cert-conteudo { font-size: clamp(0.8rem, 1.2vw + 0.7rem, 0.875rem); overflow-wrap: break-word; }
            .cert-conteudo img { max-width: 100%; height: auto; }
            .cert-section-title { font-size: clamp(0.95rem, 1.5vw + 0.85rem, 1rem); }
            .cert-data-label { font-size: clamp(0.8rem, 1vw + 0.75rem, 0.9rem); }
            .cert-data-value { font-size: clamp(0.9rem, 1.2vw + 0.8rem, 1rem); }
          </style>
        </head>
        <body class="bg-light min-vh-100 py-3">
      <div class="container-fluid px-2 px-sm-3" style="max-width: 640px;">
        <div class="card border-success shadow-sm">
          <div class="card-header bg-success text-white d-flex align-items-center gap-2 py-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <strong>Certificado válido</strong>
          </div>
          <div class="card-body p-3 p-md-4">
            <p class="mb-3 cert-data-value">O certificado consultado é autêntico.</p>
            <div class="row g-2 mb-3">
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Aluno</div>
              <div class="col-12 col-sm-8 cert-value-uppercase cert-data-value" t-esc="nome_aluno"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Curso</div>
              <div class="col-12 col-sm-8 cert-data-value" t-esc="curso.name"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Período</div>
              <div class="col-12 col-sm-8 cert-data-value">
                <t t-if="curso.get_periodo_display()" t-esc="curso.get_periodo_display()"/>
                <t t-else="">—</t>
              </div>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Carga horária</div>
              <div class="col-12 col-sm-8 cert-data-value">
                <t t-if="curso.carga_horaria" t-esc="'%s horas' % curso.carga_horaria"/>
                <t t-else="">—</t>
              </div>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Instrutor</div>
              <div class="col-12 col-sm-8 cert-value-uppercase cert-data-value" t-esc="curso.instrutor_id.name if curso.instrutor_id else '—'"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Responsável técnico</div>
              <div class="col-12 col-sm-8 cert-value-uppercase cert-data-value" t-esc="curso.responsavel_tecnico_id.name if curso.responsavel_tecnico_id else '—'"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Token</div>
              <div class="col-12 col-sm-8 cert-value-monospace cert-data-value" t-esc="linha.token"/>
            </div>
            <hr/>
            <h6 class="fw-bold mb-2 cert-section-title">Dados da empresa</h6>
            <t t-if="company_logo_data_uri">
              <div class="mb-2">
                <img t-att-src="company_logo_data_uri" alt="Logo" class="img-fluid" style="max-height: 80px;"/>
              </div>
            </t>
            <div class="row g-2 mb-3">
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Razão social</div>
              <div class="col-12 col-sm-8 cert-data-value" t-esc="company_nome"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">CNPJ</div>
              <div class="col-12 col-sm-8 cert-data-value" t-esc="company_cnpj or '—'"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Endereço</div>
              <div class="col-12 col-sm-8 cert-data-value" t-esc="endereco_completo or '—'"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Telefone</div>
              <div class="col-12 col-sm-8 cert-data-value" t-esc="company_telefone or '—'"/>
            </div>
            <hr/>
            <h6 class="fw-bold mb-2 cert-section-title">Conteúdo programático</h6>
            <div class="cert-conteudo text-secondary">
              <t t-if="curso.conteudo_programatico">
                <div t-raw="curso.conteudo_programatico"/>
              </t>
              <t t-else="">
                <p class="fst-italic mb-0">Conteúdo não informado.</p>
              </t>
            </div>
          </div>
        </div>
      </div>
        </body>
      </html>
    </template>

    <!-- Página exibida quando o token não existe (redirect /certificados/nao-encontrado). Responsiva com Bootstrap 5. -->
    <template id="certificado_nao_encontrado_page">
      <html>
        <head>
          <meta charset="utf-8"/>
          <meta name="viewport" content="width=device-width, initial-scale=1"/>
          <title>Certificado não encontrado</title>
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"/>
          <style>
            html { font-size: clamp(15px, 2vw + 14px, 16px); }
            .card-header { font-size: clamp(1rem, 3vw + 0.9rem, 1.25rem); }
            .cert-section-title { font-size: clamp(0.95rem, 1.5vw + 0.85rem, 1rem); }
            .cert-data-label { font-size: clamp(0.8rem, 1vw + 0.75rem, 0.9rem); }
            .cert-data-value { font-size: clamp(0.9rem, 1.2vw + 0.8rem, 1rem); }
          </style>
        </head>
        <body class="bg-light min-vh-100 py-3">
      <div class="container-fluid px-2 px-sm-3" style="max-width: 640px;">
        <div class="card border-warning shadow-sm">
          <div class="card-header bg-warning text-white d-flex align-items-center py-3">
            <strong>Certificado não encontrado</strong>
          </div>
          <div class="card-body p-3 p-md-4">
            <p class="mb-3 cert-data-value">O link consultado não corresponde a um certificado válido ou o registro não existe.</p>
            <hr/>
            <h6 class="fw-bold mb-2 cert-section-title">Dados da empresa</h6>
            <t t-if="company_logo_data_uri">
              <div class="mb-2">
                <img t-att-src="company_logo_data_uri" alt="Logo" class="img-fluid" style="max-height: 80px;"/>
              </div>
            </t>
            <div class="row g-2">
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Razão social</div>
              <div class="col-12 col-sm-8 cert-data-value" t-esc="company_nome"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">CNPJ</div>
              <div class="col-12 col-sm-8 cert-data-value" t-esc="company_cnpj or '—'"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Endereço</div>
              <div class="col-12 col-sm-8 cert-data-value" t-esc="endereco_completo or '—'"/>
              <div class="col-12 col-sm-4 text-muted fw-medium cert-data-label">Telefone</div>
              <div class="col-12 col-sm-8 cert-data-value" t-esc="company_telefone or '—'"/>
            </div>
          </div>
        </div>
      </div>
        </body>
      </html>
    </template>
  </data>
</odoo>
