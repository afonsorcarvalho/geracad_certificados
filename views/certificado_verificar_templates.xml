<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Página exibida quando o certificado é válido (rota /certificados/verificar/<token>). HTML completo para auth=public. Responsiva para mobile e desktop. -->
    <template id="certificado_verificar_page">
      <html>
        <head>
          <meta charset="utf-8"/>
          <meta name="viewport" content="width=device-width, initial-scale=1"/>
          <title>Verificação de Certificado</title>
          <style>
            *, *::before, *::after { box-sizing: border-box; }
            body { margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; background: #f5f5f5; }
            .cert-verif-wrap { max-width: 600px; margin: 0 auto; padding: 1rem; min-height: 100vh; }
            .cert-verif-card { border: 1px solid #28a745; border-radius: 8px; overflow: hidden; background: #fff; box-shadow: 0 2px 8px rgba(0,0,0,0.08); }
            .cert-verif-header { background: #28a745; color: white; padding: 1rem; display: flex; align-items: center; gap: 10px; flex-wrap: wrap; }
            .cert-verif-header svg { flex-shrink: 0; }
            .cert-verif-body { padding: 1rem; }
            .cert-verif-grid { display: grid; grid-template-columns: 120px 1fr; gap: 8px 12px; margin: 0; }
            .cert-verif-grid .cert-label { margin: 0; color: #666; font-weight: 500; }
            .cert-verif-grid .cert-value { margin: 0; word-break: break-word; }
            .cert-verif-grid .cert-value-uppercase { text-transform: uppercase; }
            .cert-verif-grid .cert-value-monospace { font-family: monospace; font-size: 11px; word-break: break-all; }
            .cert-verif-hr { margin: 1.25rem 0; border: none; border-top: 1px solid #dee2e6; }
            .cert-verif-section-title { margin: 0 0 8px; font-weight: bold; font-size: 1rem; }
            .cert-verif-logo { margin-bottom: 1rem; }
            .cert-verif-logo img { max-width: 200px; max-height: 80px; object-fit: contain; height: auto; width: 100%; }
            .cert-verif-conteudo { font-size: 12px; line-height: 1.5; color: #333; overflow-wrap: break-word; }
            .cert-verif-conteudo img { max-width: 100%; height: auto; }
            @media (max-width: 480px) {
              .cert-verif-wrap { padding: 0.75rem; }
              .cert-verif-body { padding: 0.75rem; }
              .cert-verif-grid { grid-template-columns: 1fr; gap: 4px 0; }
              .cert-verif-grid .cert-label { font-size: 0.875rem; padding-top: 8px; border-top: 1px solid #eee; }
              .cert-verif-grid .cert-label:first-child { padding-top: 0; border-top: none; }
              .cert-verif-grid .cert-value { padding-bottom: 4px; }
              .cert-verif-header { padding: 0.75rem; font-size: 0.95rem; }
              .cert-verif-logo img { max-width: 160px; }
            }
          </style>
        </head>
        <body>
      <div class="cert-verif-wrap">
        <div class="cert-verif-card">
          <div class="cert-verif-header">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <strong>Certificado válido</strong>
          </div>
          <div class="cert-verif-body">
            <p>O certificado consultado é autêntico.</p>
            <div class="cert-verif-grid">
              <span class="cert-label">Aluno</span>
              <span class="cert-value cert-value-uppercase" t-esc="nome_aluno"/>
              <span class="cert-label">Curso</span>
              <span class="cert-value" t-esc="curso.name"/>
              <span class="cert-label">Período</span>
              <span class="cert-value">
                <t t-if="curso.get_periodo_display()" t-esc="curso.get_periodo_display()"/>
                <t t-else="">—</t>
              </span>
              <span class="cert-label">Carga horária</span>
              <span class="cert-value">
                <t t-if="curso.carga_horaria" t-esc="'%s horas' % curso.carga_horaria"/>
                <t t-else="">—</t>
              </span>
              <span class="cert-label">Instrutor</span>
              <span class="cert-value cert-value-uppercase" t-esc="curso.instrutor_id.name if curso.instrutor_id else '—'"/>
              <span class="cert-label">Responsável técnico</span>
              <span class="cert-value cert-value-uppercase" t-esc="curso.responsavel_tecnico_id.name if curso.responsavel_tecnico_id else '—'"/>
              <span class="cert-label">Token</span>
              <span class="cert-value cert-value-monospace" t-esc="linha.token"/>
            </div>
            <hr class="cert-verif-hr"/>
            <p class="cert-verif-section-title">Dados da empresa</p>
            <t t-if="company_logo_data_uri">
              <div class="cert-verif-logo">
                <img t-att-src="company_logo_data_uri" alt="Logo"/>
              </div>
            </t>
            <div class="cert-verif-grid">
              <span class="cert-label">Razão social</span>
              <span class="cert-value" t-esc="company_nome"/>
              <span class="cert-label">CNPJ</span>
              <span class="cert-value" t-esc="company_cnpj or '—'"/>
              <span class="cert-label">Endereço</span>
              <span class="cert-value" t-esc="endereco_completo or '—'"/>
              <span class="cert-label">Telefone</span>
              <span class="cert-value" t-esc="company_telefone or '—'"/>
            </div>
            <hr class="cert-verif-hr"/>
            <h3 class="cert-verif-section-title">Conteúdo programático</h3>
            <div class="cert-verif-conteudo">
              <t t-if="curso.conteudo_programatico">
                <div t-raw="curso.conteudo_programatico"/>
              </t>
              <t t-else="">
                <p style="margin: 0; font-style: italic; color: #666;">Conteúdo não informado.</p>
              </t>
            </div>
          </div>
        </div>
      </div>
        </body>
      </html>
    </template>

    <!-- Página exibida quando o token não existe (redirect /certificados/nao-encontrado). Responsiva. -->
    <template id="certificado_nao_encontrado_page">
      <html>
        <head>
          <meta charset="utf-8"/>
          <meta name="viewport" content="width=device-width, initial-scale=1"/>
          <title>Certificado não encontrado</title>
          <style>
            *, *::before, *::after { box-sizing: border-box; }
            body { margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; background: #f5f5f5; }
            .cert-verif-wrap { max-width: 600px; margin: 0 auto; padding: 1rem; min-height: 100vh; }
            .cert-verif-card { border: 1px solid #ffc107; border-radius: 8px; overflow: hidden; background: #fff; box-shadow: 0 2px 8px rgba(0,0,0,0.08); }
            .cert-verif-header { background: #ffc107; color: white; padding: 1rem; display: flex; align-items: center; flex-wrap: wrap; }
            .cert-verif-body { padding: 1rem; }
            .cert-verif-hr { margin: 1.25rem 0; border: none; border-top: 1px solid #dee2e6; }
            .cert-verif-section-title { margin: 0 0 8px; font-weight: bold; font-size: 1rem; }
            .cert-verif-logo { margin-bottom: 1rem; }
            .cert-verif-logo img { max-width: 200px; max-height: 80px; object-fit: contain; height: auto; width: 100%; }
            .cert-verif-grid { display: grid; grid-template-columns: 120px 1fr; gap: 8px 12px; margin: 0; }
            .cert-verif-grid .cert-label { margin: 0; color: #666; font-weight: 500; }
            .cert-verif-grid .cert-value { margin: 0; word-break: break-word; }
            @media (max-width: 480px) {
              .cert-verif-wrap { padding: 0.75rem; }
              .cert-verif-header, .cert-verif-body { padding: 0.75rem; }
              .cert-verif-header { font-size: 0.95rem; }
              .cert-verif-grid { grid-template-columns: 1fr; gap: 4px 0; }
              .cert-verif-grid .cert-label { font-size: 0.875rem; padding-top: 8px; border-top: 1px solid #eee; }
              .cert-verif-grid .cert-label:first-child { padding-top: 0; border-top: none; }
              .cert-verif-grid .cert-value { padding-bottom: 4px; }
              .cert-verif-logo img { max-width: 160px; }
            }
          </style>
        </head>
        <body>
      <div class="cert-verif-wrap">
        <div class="cert-verif-card">
          <div class="cert-verif-header">
            <strong>Certificado não encontrado</strong>
          </div>
          <div class="cert-verif-body">
            <p>O link consultado não corresponde a um certificado válido ou o registro não existe.</p>
            <hr class="cert-verif-hr"/>
            <!-- <p class="cert-verif-section-title">Dados da empresa</p> -->
            <t t-if="company_logo_data_uri">
              <div class="cert-verif-logo">
                <img t-att-src="company_logo_data_uri" alt="Logo"/>
              </div>
            </t>
            <div class="cert-verif-grid">
              <span class="cert-label">Razão social</span>
              <span class="cert-value" t-esc="company_nome"/>
              <span class="cert-label">CNPJ</span>
              <span class="cert-value" t-esc="company_cnpj or '—'"/>
              <span class="cert-label">Endereço</span>
              <span class="cert-value" t-esc="endereco_completo or '—'"/>
              <span class="cert-label">Telefone</span>
              <span class="cert-value" t-esc="company_telefone or '—'"/>
            </div>
          </div>
        </div>
      </div>
        </body>
      </html>
    </template>
  </data>
</odoo>
