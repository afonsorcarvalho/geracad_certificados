<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Categoria do módulo para agrupar as permissões em Configurações > Usuários -->
        <record id="module_category_geracad_certificados" model="ir.module.category">
            <field name="name">Geracad Certificados</field>
            <field name="sequence">50</field>
        </record>
        <!-- Grupo de usuários que podem acessar o módulo Certificados -->
        <record id="group_geracad_certificados_user" model="res.groups">
            <field name="name">Usuário</field>
            <field name="category_id" ref="module_category_geracad_certificados"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Acesso ao módulo Certificados: cadastro de cursos, alunos e emissão de certificados.</field>
        </record>
    </data>
</odoo>
